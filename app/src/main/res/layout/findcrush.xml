<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/parkimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a1"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtpark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Park Shin Hye\n posted"
        app:layout_constraintLeft_toRightOf="@+id/cardview"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/pupleimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/p11"
        app:layout_constraintTop_toBottomOf="@+id/cardview" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2h"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/clockimage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/clock"
        app:layout_constraintRight_toLeftOf="@+id/hour"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/heart"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pupleimage"
        app:layout_constraintRight_toLeftOf="@id/message"
        />

    <ImageView
        android:id="@+id/message"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/message"
        app:layout_constraintTop_toBottomOf="@id/pupleimage"
        app:layout_constraintLeft_toRightOf="@id/heart"
        app:layout_constraintRight_toLeftOf="@id/share"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/share"
        app:layout_constraintLeft_toRightOf="@id/message"
        app:layout_constraintTop_toBottomOf="@id/pupleimage"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        app:layout_constraintLeft_toRightOf="@id/heart"
        app:layout_constraintTop_toBottomOf="@id/pupleimage" />

    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        app:layout_constraintTop_toBottomOf="@id/pupleimage"
        app:layout_constraintLeft_toRightOf="@id/message"
        />

    <TextView
        android:id="@+id/share2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintTop_toBottomOf="@id/pupleimage"
        app:layout_constraintLeft_toRightOf="@id/share"
        />

</androidx.constraintlayout.widget.ConstraintLayout>